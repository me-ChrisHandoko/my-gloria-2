# ============================================
# Gloria Frontend - Development Environment
# ============================================

# --------------------------------------------
# API Configuration
# --------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_VERSION=v1

# API retry configuration
NEXT_PUBLIC_API_RETRY_ENABLED=true
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
NEXT_PUBLIC_API_RETRY_DELAY=1000
NEXT_PUBLIC_API_RETRY_MAX_DELAY=10000
NEXT_PUBLIC_API_RETRY_FACTOR=2

# API request configuration
NEXT_PUBLIC_API_WITH_CREDENTIALS=true
NEXT_PUBLIC_API_MAX_REDIRECTS=5
NEXT_PUBLIC_API_MOCK_DELAY=0

# --------------------------------------------
# Clerk Authentication (Development)
# --------------------------------------------
# Replace with your actual Clerk development keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard

# --------------------------------------------
# Application Configuration
# --------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Gloria System (Dev)
NEXT_PUBLIC_APP_VERSION=1.0.0-dev
NEXT_PUBLIC_ENVIRONMENT=development

# --------------------------------------------
# Monitoring & Analytics (Disabled for Dev)
# --------------------------------------------
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# --------------------------------------------
# Feature Flags (Development)
# --------------------------------------------
NEXT_PUBLIC_ENABLE_PWA=false
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false
NEXT_PUBLIC_ENABLE_BETA_FEATURES=true
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_MOCKING=false
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# --------------------------------------------
# Security & Rate Limiting (Relaxed for Dev)
# --------------------------------------------
SESSION_SECRET=development-secret-key-change-in-production
SESSION_MAX_AGE=86400
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# --------------------------------------------
# Localization
# --------------------------------------------
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,id