# ============================================
# Gloria Frontend - Production Environment
# ============================================
# WARNING: This file contains production configuration
# Ensure all values are properly secured

# --------------------------------------------
# API Configuration
# --------------------------------------------
# Replace with your actual production API URL
NEXT_PUBLIC_API_URL=https://api.gloria.id
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_VERSION=v1

# API retry configuration
NEXT_PUBLIC_API_RETRY_ENABLED=true
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
NEXT_PUBLIC_API_RETRY_DELAY=1000
NEXT_PUBLIC_API_RETRY_MAX_DELAY=10000
NEXT_PUBLIC_API_RETRY_FACTOR=2

# API request configuration
NEXT_PUBLIC_API_WITH_CREDENTIALS=true
NEXT_PUBLIC_API_MAX_REDIRECTS=5
NEXT_PUBLIC_API_MOCK_DELAY=0

# --------------------------------------------
# Clerk Authentication (Production)
# --------------------------------------------
# Replace with your actual Clerk production keys
# IMPORTANT: Use production keys (pk_live_*) for production environment
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key

# Clerk URLs - Using new redirect props (deprecated props removed)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=/dashboard

# Optional Clerk webhook signing secret (for webhook validation)
CLERK_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# --------------------------------------------
# Application Configuration
# --------------------------------------------
NEXT_PUBLIC_APP_URL=https://gloria.id
NEXT_PUBLIC_APP_NAME=Gloria System
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=production

# --------------------------------------------
# Monitoring & Analytics (Enabled for Production)
# --------------------------------------------
# Replace with your actual Sentry DSN
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Replace with your actual analytics IDs
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_POSTHOG_KEY=phc_your_production_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# --------------------------------------------
# Feature Flags (Production)
# --------------------------------------------
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_MOCKING=false
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=wss://api.gloria.id

# --------------------------------------------
# Security & Rate Limiting (Strict for Production)
# --------------------------------------------
# Use a strong, unique secret key for production
SESSION_SECRET=your-production-secret-key-minimum-32-characters
SESSION_MAX_AGE=86400
CORS_ALLOWED_ORIGINS=https://gloria.id,https://www.gloria.id
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# --------------------------------------------
# CDN & Storage (Production)
# --------------------------------------------
# Replace with your actual CDN URL
NEXT_PUBLIC_CDN_URL=https://cdn.gloria.id

# S3 or cloud storage configuration (if needed)
STORAGE_ACCESS_KEY_ID=your-storage-access-key
STORAGE_SECRET_ACCESS_KEY=your-storage-secret-key
STORAGE_BUCKET_NAME=gloria-production
STORAGE_REGION=ap-southeast-1

# --------------------------------------------
# Redis Configuration (Production Cache)
# --------------------------------------------
# Replace with your actual Redis connection
REDIS_URL=redis://your-redis-host:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# --------------------------------------------
# Email Service (Production)
# --------------------------------------------
EMAIL_FROM=noreply@gloria.id
EMAIL_REPLY_TO=support@gloria.id

# --------------------------------------------
# Localization
# --------------------------------------------
NEXT_PUBLIC_DEFAULT_LOCALE=id
NEXT_PUBLIC_SUPPORTED_LOCALES=en,id