# ============================================
# Gloria Frontend Environment Configuration
# ============================================
# Copy this file to .env.local and fill in your values
# For production, use appropriate production values

# --------------------------------------------
# API Configuration
# --------------------------------------------
# Backend API base URL (without /api/v1 suffix - will be added automatically)
NEXT_PUBLIC_API_URL=http://localhost:3001

# API timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# API version for versioning support
NEXT_PUBLIC_API_VERSION=v1

# API retry configuration
NEXT_PUBLIC_API_RETRY_ENABLED=true
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
NEXT_PUBLIC_API_RETRY_DELAY=1000
NEXT_PUBLIC_API_RETRY_MAX_DELAY=10000
NEXT_PUBLIC_API_RETRY_FACTOR=2

# API request configuration
NEXT_PUBLIC_API_WITH_CREDENTIALS=true
NEXT_PUBLIC_API_MAX_REDIRECTS=5

# API mock delay for development (milliseconds)
NEXT_PUBLIC_API_MOCK_DELAY=0

# --------------------------------------------
# Clerk Authentication
# --------------------------------------------
# Get these from https://dashboard.clerk.dev
# IMPORTANT: Use production keys (pk_live_*) for production environment
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# Clerk URLs - Using new redirect props (deprecated props no longer supported)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=/dashboard

# Optional Clerk webhook signing secret (for webhook validation)
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret

# --------------------------------------------
# Application Configuration
# --------------------------------------------
# Application base URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application name and version
NEXT_PUBLIC_APP_NAME=Gloria System
NEXT_PUBLIC_APP_VERSION=1.0.0

# Environment (development, staging, production)
NEXT_PUBLIC_ENVIRONMENT=development

# --------------------------------------------
# Monitoring & Analytics
# --------------------------------------------
# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# --------------------------------------------
# Feature Flags
# --------------------------------------------
# Enable/disable features
NEXT_PUBLIC_ENABLE_PWA=false
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_MOCKING=false
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# --------------------------------------------
# Security & Rate Limiting
# --------------------------------------------
# Session configuration
SESSION_SECRET=your-session-secret-minimum-32-characters
SESSION_MAX_AGE=86400

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# --------------------------------------------
# Storage & CDN
# --------------------------------------------
# CDN URL for static assets
NEXT_PUBLIC_CDN_URL=

# S3 or cloud storage configuration (if needed)
STORAGE_ACCESS_KEY_ID=
STORAGE_SECRET_ACCESS_KEY=
STORAGE_BUCKET_NAME=
STORAGE_REGION=

# --------------------------------------------
# Redis Configuration (for caching)
# --------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# --------------------------------------------
# Database (if direct connection needed)
# --------------------------------------------
# Not recommended for frontend, use API instead
# DATABASE_URL=postgresql://user:password@localhost:5432/gloria

# --------------------------------------------
# Email Service (if needed for frontend)
# --------------------------------------------
EMAIL_FROM=noreply@gloria.com
EMAIL_REPLY_TO=support@gloria.com

# --------------------------------------------
# Development Tools
# --------------------------------------------
# Bundle analyzer
ANALYZE=false

# Vercel deployment (if using Vercel)
VERCEL_URL=
VERCEL_ENV=

# --------------------------------------------
# Localization
# --------------------------------------------
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,id

# --------------------------------------------
# Third-party Services
# --------------------------------------------
# Add any additional third-party service configurations here